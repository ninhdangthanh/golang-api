    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}", // Run the entire project
            "env": {
                "GO111MODULE": "on"
            },
            "args": [] // Pass any command-line arguments here
        },
        {
            "name": "Launch File",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}", // Run the file currently open in the editor
            "env": {
                "GO111MODULE": "on"
            },
            "args": [] // Pass any command-line arguments here
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 2345 // Adjust to the port used by your remote process
        }
    ]
}
